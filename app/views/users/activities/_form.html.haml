.row
  .medium-8.columns.medium-centered
    = form_for [@user, @activity] do |f|
      - if @activity.errors.any?
        #error_explanation
          %h2= "#{pluralize(@activity.errors.count, "error")} prohibited this activity from being saved:"
          %ul
            - @activity.errors.full_messages.each do |msg|
              %li= msg

      .row
        .medium-4.columns
          = f.label :name, class: 'inline'
        .medium-8.columns
          = f.text_field :name
      .row
        .medium-4.columns
          = f.label :description, class: 'inline'
        .medium-8.columns
          = f.text_area :description
      .row
        .medium-4.columns
          = f.label :type, class: 'inline'
        .medium-8.columns
          = f.select :type, Activity::TYPES, prompt: 'Activity Type'
      .row
        .medium-8.columns.right
          = f.button class: 'expand' do
            = icon 'save fa-fw'
            Save
