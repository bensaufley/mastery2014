%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  %div{ data: { row: true } }
    %div{data: { columns: '1/3' }}= f.label :email
    %div{data: { columns: '2/3' }}= f.email_field :email, autofocus: true
  %div{ data: { row: true } }
    %div{data: { columns: '1/3' }}
      = f.label :password
      - if @validatable
        %small.hint
          (#{@minimum_password_length} characters minimum)

    %div{data: { columns: '2/3' }}= f.password_field :password, autocomplete: "off"
  %div{ data: { row: true } }
    %div{data: { columns: '1/3' }}= f.label :password_confirmation
    %div{data: { columns: '2/3' }}= f.password_field :password_confirmation, autocomplete: "off"
  %div= f.submit "Sign up"
= render "devise/shared/links"
