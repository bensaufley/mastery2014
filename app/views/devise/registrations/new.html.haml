.row
  .medium-6.columns.medium-centered
    %h2 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .row
        .medium-4.columns= f.label :email, class: 'inline'
        .medium-8.columns= f.email_field :email, autofocus: true
      .row
        .medium-4.columns
          = f.label :password, class: 'inline' do
            Password
            - if @validatable
              %small.hint
                (#{@minimum_password_length} characters minimum)

        .medium-8.columns= f.password_field :password, autocomplete: "off"
      .row
        .medium-4.columns= f.label :password_confirmation, class: 'inline'
        .medium-8.columns= f.password_field :password_confirmation, autocomplete: "off"
      .row
        .medium-8.columns.right
          = f.submit 'Sign up', class: 'button expand'